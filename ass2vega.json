{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "2021 World Happiness Report Ranking",
  "width": 1000,
  "height": 800,
  "data": {
    "url": "https://raw.githubusercontent.com/span0040/3179_Assignment2/main/3179map2.topojson",
    "format": {"type": "topojson", "feature": "custom.geo"}
  },
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/span0040/3179_Assignment2/main/w9hw.csv"
            },
            "key": "Country name",
            "fields": ["Ladder score"]
          }
        }
      ],
      "projection": {"type": "equalEarth"},
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {
            "scheme": "tealblues"
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "Ladder score", "type": "quantitative"}
        ]
      }
    }
  ]
}
