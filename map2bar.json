{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/span0040/3179_Assignment2/main/ladderscorebar.csv"},
  "height": {"step": 24},
  "width": 700,
  "mark": "bar",
  "params": [{
    "name": "region_selection",
    "bind": {
        "input": "select",
        "options": [
            null,
            "Commonwealth of Independent States",
            "East Asia",
            "Latin America and Caribbean",
            "Middle East and North Africa",
            "North America and ANZ",
            "South Asia",
            "Sub-Saharan Africa",
            "Western Europe"
        ],
        "labels":[
            "Show All",
            "Commonwealth of Independent States",
            "East Asia",
            "Latin America and Caribbean",
            "Middle East and North Africa",
            "North America and ANZ",
            "South Asia",
            "Sub-Saharan Africa",
            "Western Europe"
         ],
        "name": "Region Selection: "
    }
 }],
  "transform": [
    {"filter": "region_selection == null || datum.Regions == region_selection"}
  ],
  "encoding": {
    "y": {
      "field": "Country name",
      "type": "ordinal",
      "sort": "-x",
      "axis": {"title": "Country Name", "titleFontSize": 15, "labelFontSize": 15}
    },
    "x": {
      "aggregate": "sum",
      "field": "Logged GDP per capita",
      "title": "Logarithmized GDP per capita",
      "axis": {"title": "Logarithmized GDP per capita", "titleFontSize": 15, "labelFontSize": 15}
    },
    "color": {
        "field": "Regions",
        "type": "nominal",
        "scale": {
          "domain": [
            "Commonwealth of Independent States",
            "East Asia",
            "Latin America and Caribbean",
            "Middle East and North Africa",
            "North America and ANZ",
            "South Asia",
            "Sub-Saharan Africa",
            "Western Europe"
          ],
          "range": [
            "#FF0000",
            "#00F8CF",
            "#00FF08",
            "#784212",
            "#DEFD00",
            "#A500F8",
            "#F86500",
            "#0f50b3"
          ]
        },
        "legend": {"titleFontSize": 15, "labelFontSize": 15}
    },
    "tooltip": [
        {"field": "Country name", "type": "nominal"},
        {"field": "Regions", "type": "nominal"},
        {"field": "Ladder score", "type": "quantitative", "format": ","},
        {"field": "Logarithmized GDP per capita", "type": "quantitative", "format": ","}
    ]
  }
}
